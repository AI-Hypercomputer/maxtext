{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MaxText Decode",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "python3",
      "program": "${workspaceFolder}/MaxText/decode.py",
      "args": ["MaxText/configs/base.yml", 
               "run_name=runner_$(date +%Y-%m-%d-%H-%M)", 
               "base_output_directory=gs://test-maxtext-output",
               "dataset_path=gs://test-maxtext-dataset",
               "steps=2",
               "attention=dot_product",
               "enable_checkpointing=false"]
    },
    {
      "name": "Debug MaxText Train",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "python3",
      "program": "${workspaceFolder}/MaxText/train.py",
      "args": ["MaxText/configs/base.yml",
               "model_name=gpt3-175b", 
               "run_name=runner_$(date +%Y-%m-%d-%H-%M)", 
               "base_output_directory=gs://test-maxtext-output",
               "dataset_path=gs://mlperf-exp-us-east1-cp0",
               "dataset_name=c4/en:3.0.7",
               "dataset_type=c4_mlperf",
               "tokenizer_path=gs://mlperf-llm-public2/vocab/c4_en_301_5Mexp2_spm.model",
               "remat_policy=minimal",
               "steps=2",
               "enable_checkpointing=false"]
    }
  ]
}